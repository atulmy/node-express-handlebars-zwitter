<h2>Tweets</h2>

{{# each tweets }}
    <div class="panel panel-default">
        <div class="panel-body">
            {{ text }}
        </div>

        <div class="panel-footer">
            {{ userId }} &bull; {{ niceTime createdAt }}
        </div>
    </div>
{{ else }}
    <div class="panel panel-default">
        <div class="panel-body">
            No tweets yet. <a href="/tweet">Click here</a> to Tweet.
        </div>
    </div>
{{/each}}